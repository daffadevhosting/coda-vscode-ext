{
  "name": "coda-vscode",
  "displayName": "coda-vscode",
  "description": "Your AI coding companion, CoDa.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:coda-vscode.chatView"
  ],
  "main": "./out/extension.js",
"contributes": {
  "commands": [
    {
      "command": "coda-vscode.askCoDa",
      "title": "Ask CoDa"
    },
    {
      "command": "coda-vscode.fixError",
      "title": "CoDa: Fix this code"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "when": "editorHasSelection",
        "command": "coda-vscode.fixError",
        "group": "1_modification"
      }
    ]
  },
    "configuration": {
      "title": "CoDa VSCode",
      "properties": {
        "coda-vscode.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API Key for CoDa.",
          "scope": "application"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coda-sidebar",
          "title": "CoDa",
          "icon": "media/coda-icon.png"
        }
      ]
    },
    "views": {
      "coda-sidebar": [
        {
          "id": "coda-vscode.chatView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts,tsx",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  }
}
